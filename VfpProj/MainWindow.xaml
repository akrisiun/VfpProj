<Window x:Class="VfpProj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="78" Width="775.681" FontSize="10" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57"/>
            <ColumnDefinition Width="475*"/>
            <ColumnDefinition Width="68"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="buttonModi" Grid.Column="0"
                    Content="Modi" Height="22" VerticalAlignment="Top" Margin="2,0,0,0" FontSize="9"/>
        <TextBox  x:Name="textFile" Grid.Column="1"
                      Height="22"  Panel.ZIndex="10"
                      TextWrapping="Wrap" Text="TextBox" 
                      Margin="2,0,5,0" VerticalAlignment="Top" MinWidth="200" />
        <Button x:Name="buttonCD" Grid.Column="2"
                Content="Cd" Height="22" Panel.ZIndex="2"
                    VerticalAlignment="Top" HorizontalAlignment="Left" Width="45" Margin="0,0,0,0" FontSize="9"/>
        <TabControl  Grid.Row="1" Grid.ColumnSpan="3" Height="22" VerticalAlignment="Top" Margin="2,0,2,-20">
            <TabItem Header="TabItem1">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
